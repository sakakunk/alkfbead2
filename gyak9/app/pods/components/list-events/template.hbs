


<table class="table table-striped table-hover " id="errorTable">
    <thead>
        <tr>
            <th>Játékos neve</th>
            <th>Időpont</th>
            <th>Esemény tipusa</th>
            <th>Funkció</th>
        </tr>   
    </thead>
       <tbody>
            {{#each events}}
        <tr>
            <td>{{playername}}</td>
            <td>{{time}}</td>
            <td>{{eventtype}}</td>
           
           
            <td>
                
               {{link-to "Szerkeszt" "footballmatches.editevent" this class="btn btn-success btn-sm"}}
                <button {{action "deleteEvent" this }} class="btn btn-danger btn-sm">Törlés</button> {{!-- az adott objektumot törli --}}
            </td>
        </tr>
        {{/each}}
        
        
        
    </tbody>
</table>



